{
  "root": true,
  "extends": [
    "./index.js",
    "./node.js"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "env": {
    "browser": false,
		"es2021": true,
		"node": true
  },
  "overrides": [
    {
      "files": ["tests/**/*.test.js"],
      "plugins": ["ava"],
      "extends": [
        "./avajs.js"
      ]
    }
  ]
}
